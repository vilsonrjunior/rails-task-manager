<div class="container">
<h2><%= @task.title %></h2>

<h4 class="box"><%= @task.details %></h4>

<% if @task.completed %>
<h4>This task is completed</h4>
<% else %>
<h4>This task is hasn't been completed yet</h4>
<% end %>

<p><i class="fas fa-pen" ></i><%= link_to " Edit this task", edit_path(@task) %></p>

<p><i class="fas fa-undo-alt"></i><%= link_to " Back to list", tasks_path %></p>
</div>
