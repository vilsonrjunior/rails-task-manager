<h1> My tasks </h1>

<% @tasks.each do |task| %>
<div>


<% if task.completed %>
<i class="far fa-check-square"></i>
<% else %>
<i class="far fa-square"></i>
<% end %>
<%= link_to task.title, task_path(task) %>
</div>

<% end %>

<p><i class="fas fa-plus"></i><%= link_to "Create new task", new_path %></p>


