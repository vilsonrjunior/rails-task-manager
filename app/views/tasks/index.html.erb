
<div class="container">
  <h1> My tasks </h1>
  <% @tasks.each do |task| %>
    <div>
      <% if task.completed %>
      <i class="far fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
  <p>
    <i class="fas fa-plus"></i><%= link_to "Create new task", new_path %>
  </p>
</div>
